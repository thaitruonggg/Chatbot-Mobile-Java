<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChatbotMobileJava" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>



    <style name="VIEW">
        <item name="android:background">#FFF</item>
    </style>


    <style name="SCREEN">
        <item name="android:background">@drawable/rounded_layout_background</item>
    </style>

    <style name="RESPONSE">
        <item name="android:textColor">#000</item>
        <item name="background">@drawable/app_chat_message</item>
    </style>

    <style name="CHAT">
        <item name="android:textColor">#000</item>
        <item name="background">@drawable/client_chat_message</item>
        <item name="android:fontFamily">@font/baloo2</item>
<!--        <item name="layout_constraintBottom_toBottomOf">parent</item>-->
<!--        <item name="layout_constraintEnd_toEndOf">parent</item>-->
<!--        <item name="layout_constraintTop_toTopOf">parent</item>-->
<!--        <item name="layout_constraintVertical_bias">0.499</item>-->
    </style>

    <style name="TEXT">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">#000</item>
        <item name="android:fontFamily">@font/baloo2</item>
    </style>

    <style name="BUTTON">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="CHOOSING">
        <item name="android:background">@drawable/rounded</item>
    </style>

    <style name="ICON">
        <item name="android:src">@drawable/micro_icon_black</item>
    </style>

    <style name="TOGGLE_MID">
        <item name="android:background">@drawable/segment_middle</item>
        <item name="android:textColor">#000</item>
        <item name="android:drawableTop">@drawable/lightmode</item>
    </style>
    <style name="TOGGLE_LEFT">
        <item name="android:background">@drawable/segment_left</item>
        <item name="android:textColor">#000</item>
        <item name="android:drawableTop">@drawable/system</item>
    </style>
    <style name="TOGGLE_RIGHT">
        <item name="android:background">@drawable/segment_right</item>
        <item name="android:textColor">#000</item>
        <item name="android:drawableTop">@drawable/nightmode</item>
    </style>

    <style name="SEGMENT_BACKGROUND">
        <item name="android:background">@drawable/segment_background</item>
    </style>

    <style name="MORE_OPTION">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:src">@drawable/more_option_icon</item>
    </style>

    <style name="MODEL1">
        <item name="android:background">@drawable/btn_model_choosing</item>
        <item name="android:src">@drawable/model_ai</item>

    </style>
    <style name="MODEL2">
        <item name="android:background">@drawable/btn_model_choosing</item>
        <item name="android:src">@drawable/model_white</item>
        <item name="android:textColor">#000</item>

    </style>
    <style name="MODEL_LAYOUT">
        <item name="android:background">@drawable/rounded</item>
    </style>

    <style name="MICRO">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:src">@drawable/micro_icon_black</item>
    </style>

    <style name="SEND">
        <item name="android:background">@drawable/rounded_button_black</item>
        <item name="android:src">@drawable/send_arrow</item>
    </style>

    <style name="NEW_BUTTON">
        <item name="android:background">@drawable/btn_model_choosing</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="NEW">
        <item name="android:src">@drawable/new_chat_icon</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>

    <style name="OPTION_BUTTON">
        <item name="android:background">@drawable/btn_model_choosing</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="OPTION">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:src">@drawable/setting_icon</item>
    </style>

    <style name="HISTORY_BUTTON">
        <item name="android:src">@drawable/chat_history_icon</item>
        <item name="background">@color/white</item>
    </style>

    <style name="ARROW">
        <item name="android:src">@drawable/left_arrow_icon</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="API">
        <item name="android:src">@drawable/key</item>
    </style>

    <style name="API_TEXT">
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="API_INPUT">
        <item name="android:src">@drawable/save</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="API_EDIT">
        <item name="android:background">@drawable/api_background</item>
    </style>
</resources>